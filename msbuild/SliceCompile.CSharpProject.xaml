<Rule
    Name="SliceCompileCSharpProjectProperties"
    DisplayName="Slice Compile"
    PageTemplate="generic"
    Description="Slice source file"
    xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.DataSource>
        <DataSource Persistence="ProjectFile" HasConfigurationCondition="false" Label="" ItemType=""/>
    </Rule.DataSource>

    <StringProperty
        Name="SliceCompileOutputDir"
        DisplayName="Output Directory"
        Description="Directory where generated files are created."
        Subtype="folder"
        Category="General"
        Switch="--output-dir">
    </StringProperty>

    <!-- Parsing Options -->
    <StringListProperty
        Name="SliceCompileIncludeDirectories"
        DisplayName="Include Directories"
        Description="Specifies one or more directories to add to the Slice include path; use semi-colons (;) as directory separators."
        Switch="-I"
        Subtype="folder"
        Category="General">
    </StringListProperty>

    <StringProperty
        DisplayName="Additional Options"
        Name="SliceCompileAdditionalOptions"
        Category="General"
        Subtype="AdditionalOptions"
        Description="Additional command line options to pass to slice2cpp.">
    </StringProperty>
</Rule>
